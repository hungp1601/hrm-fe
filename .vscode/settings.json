{
  "editor.formatOnSave": true,
  "eslint.validate": ["javascript", "javascriptreact", "vue"],
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "files.exclude": {
    "**/*/.nuxt": true
  },

  "js/ts.implicitProjectConfig.checkJs": true,
  "prettier.htmlWhitespaceSensitivity": "ignore",
  "css.validate": false,
  "scss.validate": false
}
