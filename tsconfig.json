{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./app/.nuxt/tsconfig.json",
  "rootDir": "./",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "ignoreDeprecations": "5.0",
    "suppressImplicitAnyIndexErrors": true,
    "types": [
      "@pinia/nuxt",
      "@nuxtjs/tailwindcss",
      "@nuxt/types",
      "@nuxtjs/toast",
      "vue-toast-notification",
      "nuxt-log4nuxt",
    ],
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "@/Utils/*": ["./utils/*"],
      "@Utils/*": ["./utils/*"],
      "@Images/*": ["./assets/images/*"],
      "@App/*": ["./app/*"]
    }
  }
}
